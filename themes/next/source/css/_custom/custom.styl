// Custom styles.
body { background:url(/images/background.gif);
		background-size:cover;
        background-repeat:no-repeat;
        background-attachment:fixed;
        background-position:center;
}
// 主页文章添加阴影效果
 .post {
   margin-top: 60px;
   margin-bottom: 60px;
   padding: 25px;
   -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
   -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
  }

  .post-body p a {
  color: #0593d3;
  border-bottom: none;
  &:hover {
    color: #0477ab;
    text-decoration: underline;
  }
}

.content {
            border-radius: 10px;
            margin-top: 30px;
            background:rgba(255,250,250,0) none repeat scroll !important;
         }


.header {
          background:rgba(255,250,250,0.0) none repeat scroll !important;
        }
.footer {
          background:rgba(255,250,250,0.0) none repeat scroll !important;
        }

.footer-inner {color: #FFFAFA;}

#sidebar {
            background:url(http://img5.duitang.com/uploads/item/201507/18/20150718161008_uvkjhljltH3.thumb.700_0.jpeg);
            background-size: cover;
            background-position:center;
            background-repeat:no-repeat;
            p,span,a {color: #FFFAFA;}
}

.aplayer-list ol li:hover {   /*列表悬停颜色*/
                  background:rgba(255 250 250,0.1) none repeat scroll !important;}
.aplayer-list ol li {   /*列表底色*/
                        background:rgba(255 250 250,0.1);}
.aplayer-list-light {   /*列表播放歌曲颜色*/
                      background:rgba(255 250 250,0.1) none repeat scroll !important;}
#player1 {    /*边框样式*/
          border-radius: 6px;
    
        }
#player1 *{color: #FFFAFA;}    /*字体颜色*/
/*列表歌曲信息的排版*/
.aplayer-list-index{float:left;}
.aplayer-list-title{float:left;}
